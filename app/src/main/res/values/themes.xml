<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GalleryEkta" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">@dimen/_1sdp</item>
    </style>

    <style name="iconEditIconBottom" parent="">
        <item name="android:layout_width">@dimen/_17sdp</item>
        <item name="android:layout_height">@dimen/_17sdp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="tvEditIconBottom" parent="">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_bold</item>
    </style>


    <style name="WheelPicker">
        <item name="wheel_atmospheric">true</item>
        <item name="wheel_curved">true</item>
        <item name="wheel_cyclic">true</item>
        <item name="wheel_item_space">24dp</item>
        <item name="wheel_item_text_color">#bfbfbf</item>
        <item name="wheel_item_text_size">16sp</item>
        <item name="wheel_selected_item_text_color">#000</item>
        <item name="wheel_visible_item_count">3</item>
    </style>

    <style name="CdoAppTheme1" parent="@style/Theme.VoiceRecorder1">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.VoiceRecorder1" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <!--        <item name="colorAccent">@color/tools_theme</item>-->
        <!--        <item name="colorOnPrimary">@color/bgcolor</item>-->
        <!--        <item name="colorOnSecondary">@color/tint_icon_color</item>-->
        <!--        <item name="colorPrimary">@color/app_color</item>-->
        <!--        <item name="colorPrimaryVariant">@color/app_color</item>-->
        <!--        <item name="colorSecondary">@color/app_color</item>-->
        <!--        <item name="colorSecondaryVariant">@color/app_color</item>-->
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textTest2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#aaaaaa</item>
    </style>


    <style name="Widget.CalendarView.Custom" parent="@android:style/Widget.DeviceDefault.Light.CalendarView">
        <item name="android:textColorPrimary">#5e99a0</item>
        <item name="android:titleTextStyle">@style/textTest</item>
        <item name="android:weekDayTextAppearance">@style/textTest2</item>
        <item name="android:dateTextAppearance">@style/textTest</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="colorAccent">#5e99a0</item>
    </style>

    <style name="textTest" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.GalleryEkta" parent="Base.Theme.GalleryEkta" />

    <style name="gnt_RatingBar" parent="android:style/Widget.Material.RatingBar.Small">

        <item name="colorControlNormal">@color/gnt_gray</item>
        <item name="colorControlActivated">#038B8B</item>

    </style>

    <style name="exitAddialog_style" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="behavior_peekHeight">@dimen/_500sdp</item>
    </style>

    <style name="AppTheme.TransparentWindow" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:statusBarColor">#aa000000</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="ContactsPopupTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/sans_bold</item>

    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomDialog">
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->

    </style>

    <style name="SettingsSectionLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <!--        <item name="android:textAllCaps">true</item>-->
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>


    <style name="UploadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme_Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimat</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="DialogAnimat" parent="">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="SCBSwitch" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorForeground">#c2b1b1b1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
    </style>

    <style name="customTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/iconColor</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="DialogAnimation" parent="">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>


    <style name="mRecyclerTabLayout" parent="">
        <item name="mTabIndicatorColor">@color/mainColor</item>
        <item name="mTabIndicatorHeight">1dp</item>
        <item name="mTabMaxWidth">20dp</item>
        <item name="mTabMinWidth">20dp</item>
        <item name="mTabPadding">10dp</item>
        <item name="mTabSelectedTextColor">@color/mainColor</item>
    </style>

    <style name="mRecyclerTabLayout.Tab" parent="@style/mRecyclerTabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="AppTheme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/BackgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/BackgroundColor</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>-->
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/BackgroundColor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/BackgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/sans_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#2A444444</item> <!-- Semi-transparent black -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NoActionBar2" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/BackgroundColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/BackgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="fontFamily">@font/sans_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>