<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity.PatternAct">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="#444"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back"
        app:round="@dimen/_100sdp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/patterlock"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/tvPattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sans_medium"
        android:gravity="center"
        android:text="Enter Your Pattern"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/mPatternLockView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvReseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Reseat Password"
        android:textColor="@color/red_color_picker" />

</androidx.appcompat.widget.LinearLayoutCompat>