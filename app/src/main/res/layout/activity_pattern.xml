<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.PatternAct">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back"
        android:tint="@color/black"
        app:round="@dimen/_100sdp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:adjustViewBounds="true"
        android:tint="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/patterlock"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sans_medium"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:text="@string/enter_your_pattern"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <com.gallery.photos.editpic.PatternLock.PatternLockView
        android:id="@+id/mPatternLockView"
        android:layout_width="match_parent"
        app:normalStateColor="@color/black"
        android:layout_height="@dimen/_300sdp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvReseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/reseat_password"
        android:textColor="@color/red_color_picker" />

</androidx.appcompat.widget.LinearLayoutCompat>