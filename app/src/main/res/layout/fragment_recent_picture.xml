<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSelection"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Pictures"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/searchiconid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/samsungripple"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search_vector"
            android:tint="@color/black"
            android:visibility="invisible"
            tools:visibility="visible" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/menuthreeid"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/samsungripple"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_three_dots_vector"
            android:tint="@color/black" />

    </LinearLayout>

    <include
        android:id="@+id/shimmerLayout"
        layout="@layout/layout_media_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        android:visibility="visible" />

    <com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller
        android:id="@+id/fastscroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        app:fastScrollEnabled="true"
        app:handleDrawable="@drawable/ic_scroll_icon"
        app:handleHasFixedSize="true"
        app:handleHeight="@dimen/_30sdp"
        app:handleVisibilityDuration="2000"
        app:handleWidth="@dimen/_23sdp"
        app:popupDrawable="@drawable/contacts_fastscroller_drawable"
        app:popupTextStyle="@style/ContactsPopupTextViewStyle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecentPictures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

    </com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller>

    <RelativeLayout
        android:id="@+id/selectedcontainerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/samsungripple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/samsungripple"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_share_vector"
                        android:tint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/samsungripple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/samsungripple"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/deleteicon"
                        android:tint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/samsungripple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/samsungripple"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:rotation="90"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_more_horiz"
                        android:tint="@color/black" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
