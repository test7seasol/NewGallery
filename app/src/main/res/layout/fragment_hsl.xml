<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BackgroundCardColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:tint="@color/white"
            android:id="@+id/imageViewCloseRatio"
            android:padding="@dimen/_9sdp"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:src="@drawable/ic_round_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            app:tint="@color/white"
            android:id="@+id/imageViewSaveRatio"
            android:padding="@dimen/_9sdp"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:src="@drawable/ic_round_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/constraintLayoutRatio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutRatioCont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/imageViewRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutRatioCont"
        android:background="@drawable/background_bottom"
        android:paddingTop="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/hsl"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toTopOf="@+id/colorselection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:text="H"
                        android:fontFamily="@font/sans_regular" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/hue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/mainColor"
                        app:isb_indicator_text_color="@color/black"
                        app:isb_max="100"
                        app:isb_min="-100"
                        app:isb_progress="0"
                        app:isb_progress_value_float="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/mainColor"
                        app:isb_thumb_size="15dp"
                        app:isb_thumb_text_color="@color/black"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/black"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#dfdfdf"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/mainColor"
                        app:isb_track_progress_size="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:fontFamily="@font/sans_regular" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/sat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/mainColor"
                        app:isb_indicator_text_color="@color/black"
                        app:isb_max="100"
                        app:isb_min="-100"
                        app:isb_progress="0"
                        app:isb_progress_value_float="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/mainColor"
                        app:isb_thumb_size="15dp"
                        app:isb_thumb_text_color="@color/black"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/black"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#dfdfdf"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/mainColor"
                        app:isb_track_progress_size="3dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp">

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:fontFamily="@font/sans_regular" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/mainColor"
                    app:isb_indicator_text_color="@color/black"
                    app:isb_max="100"
                    app:isb_min="-100"
                    app:isb_progress="0"
                    app:isb_progress_value_float="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_show_tick_texts="true"
                    app:isb_thumb_color="@color/mainColor"
                    app:isb_thumb_size="15dp"
                    app:isb_thumb_text_color="@color/black"
                    app:isb_tick_marks_size="13dp"
                    app:isb_tick_texts_color="@color/black"
                    app:isb_tick_texts_size="15sp"
                    app:isb_track_background_color="#dfdfdf"
                    app:isb_track_background_size="2dp"
                    app:isb_track_progress_color="@color/mainColor"
                    app:isb_track_progress_size="3dp" />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/colorselection"
            android:background="@drawable/background_unslelected"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_39sdp"
            android:checkedButton="@+id/red"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/holo_red_dark" />

            <RadioButton
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00ff00" />

            <RadioButton
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#0000ff" />

            <RadioButton
                android:id="@+id/mergenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ff0080" />

            <RadioButton
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#fcc010" />

            <RadioButton
                android:id="@+id/cyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#4afcfe" />

            <RadioButton
                android:id="@+id/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ffffff" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
