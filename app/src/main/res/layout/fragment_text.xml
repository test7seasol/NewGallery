<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linear_layout_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/add_text_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_preview_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:textAlignment="gravity" />
    </LinearLayout>

    <com.gallery.photos.editpic.ImageEDITModule.edit.Editor.EditText
        android:id="@+id/add_text_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/background_bottom"
        android:fontFamily="@font/sans_regular"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout_edit_text_tools" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_layout_edit_text_tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginBottom="200dp"
        android:background="@color/BackgroundColor"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/image_view_keyboard"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_keyboard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/mainColor" />

        <ImageView
            android:id="@+id/image_view_color"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_text_format"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_save_change"
            app:layout_constraintStart_toEndOf="@+id/image_view_keyboard"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/image_view_save_change"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_round_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_color"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/scroll_view_change_font_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_edit_text_tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BackgroundColor"
            android:orientation="vertical"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <LinearLayout
                    android:id="@+id/linearLayoutAdjust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/BackgroundColor"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Size"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_text_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="60"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarSize"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Color"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_text_opacity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="255"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarColor"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Background"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_background_opacity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="255"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarBackground"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Radius"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_radius"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="30"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarRadius"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Width"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_width"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="50"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarWith"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:text="Height"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp" />

                        <SeekBar
                            android:id="@+id/seekbar_height"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:max="50"
                            android:progressDrawable="@drawable/progress_drawable"
                            android:splitTrack="false"
                            android:thumb="@drawable/progress_thumb_alpha" />

                        <TextView
                            android:id="@+id/seekbarHeight"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_fonts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linLayoutColors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/sans_regular"
                        android:text="Align"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/background_unslelected"
                        android:backgroundTint="@color/itemColor"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/imageViewAlignLeft"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_format_align_left" />

                        <ImageView
                            android:id="@+id/imageViewAlignCenter"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_format_align_center_select" />

                        <ImageView
                            android:id="@+id/imageViewAlignRight"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_format_align_right" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/sans_regular"
                        android:text="Color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <RelativeLayout
                        android:id="@+id/relativeLayoutBg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/sans_regular"
                            android:text="Check Background"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkbox_background"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:checked="true"
                            android:theme="@style/SCBSwitch" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginTop="@dimen/_10sdp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor"
                app:layout_constraintBottom_toTopOf="@+id/constraint_layout" />

            <LinearLayout
                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayoutFont"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewFont"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_text_format"
                        app:tint="@color/mainColor" />

                    <TextView
                        android:id="@+id/textViewFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="center"
                        android:text="Font"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutShadow"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewShadow"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:padding="1dp"
                        android:src="@drawable/ic_bg" />

                    <TextView
                        android:id="@+id/textViewShadow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="center"
                        android:text="Shadow"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutColor"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewColor"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_palette" />

                    <TextView
                        android:id="@+id/textViewColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="center"
                        android:text="Color"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSet"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewSet"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:padding="1dp"
                        android:src="@drawable/ic_set"
                        app:tint="@drawable/press_selected_color" />

                    <TextView
                        android:id="@+id/textViewSet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="center"
                        android:text="Adjust"
                        android:textColor="@drawable/press_selected_color"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
