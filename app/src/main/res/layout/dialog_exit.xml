<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/layout_close_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/background_bottom"
        android:backgroundTint="@color/white"
        android:paddingTop="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2sp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:src="@drawable/ic_round_warning"
            android:layout_centerHorizontal="true"
            app:tint="@color/black" />

        <TextView
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/textViewExit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:text="@string/are_you_sure_you_want_to_discard_changes"
            android:layout_below="@+id/imageView"
            android:fontFamily="@font/sans_regular" />

        <TextView
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textViewDiscard"
            android:background="@drawable/background_selected"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="Discard Changes"
            android:layout_below="@+id/textViewExit"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sans_regular"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp" />

        <TextView
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/mainColor"
            android:gravity="center"
            android:id="@+id/textViewCancel"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Cancel"
            android:layout_below="@+id/textViewDiscard"
            android:fontFamily="@font/sans_regular" />
    </RelativeLayout>
</FrameLayout>
