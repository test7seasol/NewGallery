<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/_12sdp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/rounded_shapeless"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_7sdp">

        <LinearLayout
            android:id="@+id/llUnFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_regular"
                android:padding="@dimen/_10sdp"
                android:text="Unfavourite"
                android:textColor="@color/blackg"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_regular"
                android:padding="@dimen/_10sdp"
                android:text="Copy to album"
                android:textColor="@color/blackg"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/samsungripple"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_regular"
                android:padding="@dimen/_10sdp"
                android:text="Move to album"
                android:textColor="@color/blackg"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSelectAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_regular"
                android:padding="@dimen/_10sdp"
                android:text="@string/select_all"
                android:textColor="@color/blackg"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
