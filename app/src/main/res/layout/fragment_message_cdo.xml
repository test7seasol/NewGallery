<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/li_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/notTalkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectNotTalk"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                app:tint="@color/tools_theme" />

            <TextView
                android:id="@+id/notTalkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_8sdp"
                android:singleLine="true"
                android:text="@string/can_not_talk_right_now"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sendNotTalkText"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_send_black_24dp"
                android:visibility="gone"
                app:tint="@color/tools_theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/callLaterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectCallLater"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                app:tint="@color/tools_theme" />

            <TextView
                android:id="@+id/callLaterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_8sdp"
                android:singleLine="true"
                android:text="@string/can_call_you_later"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sendCallLaterText"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_send_black_24dp"
                android:visibility="gone"
                app:tint="@color/tools_theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onWayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectOnWay"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                app:tint="@color/tools_theme" />

            <TextView
                android:id="@+id/onWayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_8sdp"
                android:singleLine="true"
                android:text="@string/i_am_on_my_way"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sendOnWayText"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_send_black_24dp"
                android:visibility="gone"
                app:tint="@color/tools_theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_edit_my"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/write_personal_message"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/lightGrey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sendMesssage"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_send_black_24dp"
                android:visibility="gone"
                app:tint="@color/tools_theme" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
