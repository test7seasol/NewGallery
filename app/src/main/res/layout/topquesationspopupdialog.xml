<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/_12sdp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:fontFamily="@font/sans_regular"
            android:padding="@dimen/_7sdp"
            android:text="What's your favorite color?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:fontFamily="@font/sans_regular"
            android:padding="@dimen/_7sdp"
            android:text="What was the name of your first pet?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:fontFamily="@font/sans_regular"
            android:padding="@dimen/_7sdp"
            android:text="What is your mother's maiden name?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:fontFamily="@font/sans_regular"
            android:padding="@dimen/_7sdp"
            android:text="What's your favorite color?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:fontFamily="@font/sans_regular"
            android:padding="@dimen/_7sdp"
            android:text="What is your favorite movie?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/samsungripple"
            android:padding="@dimen/_7sdp"
            android:text="In what city were you born?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</RelativeLayout>
